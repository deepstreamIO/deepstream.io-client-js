{
  "name": "deepstream.io-client-js",
  "version": "4.0.0-rc.1",
  "description": "the javascript client for deepstream.io",
  "keywords": [
    "deepstream",
    "javascript",
    "realtime",
    "client"
  ],
  "main": "dist/src/deepstream.js",
  "types": "dist/src/client.d.ts",
  "directories": {
    "test": "src/test"
  },
  "scripts": {
    "tsc": "rm -rf dist && tsc",
    "build": "webpack --config webpack.dev.js",
    "build:prod": "webpack --config webpack.prod.js",
    "rebuild": "rimraf dist && webpack",
    "clean": "rimraf dist",
    "lint": "tslint src/*.ts src/**/*.ts -t verbose",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha --opts mocha.opts",
    "test:coverage": "nyc mocha --opts mocha.opts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/deepstreamIO/deepstream.io-client-js.git"
  },
  "optionalDependencies": {
    "utf-8-validate": "^5.0.2",
    "bufferutil": "^4.0.1"
  },
  "dependencies": {
    "component-emitter2": "^1.3.5",
    "node-localstorage": "^1.3.1",
    "ws": "^6.2.1"
  },
  "browser": {
    "net": false,
    "ws": false
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.26",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.4",
    "@types/sinon": "^7.0.11",
    "@types/ws": "^6.0.1",
    "bluebird": "^3.5.4",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "husky": "^1.3.1",
    "mocha": "^6.1.3",
    "nyc": "^13.3.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.1",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.1.0",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0"
  },
  "author": "deepstreamHub GmbH",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/deepstreamIO/deepstream.io-client-js/issues"
  },
  "homepage": "http://deepstream.io",
  "eslintConfig": {
    "extends": "deepstream"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tsc && npm t && npm run build"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  }
}

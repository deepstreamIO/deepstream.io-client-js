{
  "name": "@deepstream/client",
  "version": "4.0.0-rc.37",
  "description": "the javascript client for deepstream.io",
  "keywords": [
    "deepstream",
    "javascript",
    "realtime",
    "client"
  ],
  "main": "dist/deepstream.js",
  "types": "dist/client.d.ts",
  "directories": {
    "test": "src/test"
  },
  "scripts": {
    "tsc": "rm -rf dist && tsc",
    "build": "npm run tsc && webpack --config webpack.dev.js",
    "build:prod": "npm run tsc && webpack --config webpack.prod.js",
    "rebuild": "rimraf dist && webpack",
    "clean": "rimraf dist",
    "lint": "tslint src/*.ts src/**/*.ts -t verbose",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha --opts mocha.opts",
    "test:coverage": "nyc mocha --opts mocha.opts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/deepstreamIO/deepstream.io-client-js.git"
  },
  "dependencies": {
    "@deepstream/protobuf": "^1.0.0-rc.4",
    "protobufjs": "^6.8.8",
    "ws": "^7.0.0"
  },
  "browser": {
    "net": false,
    "ws": false
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.26",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.2",
    "@types/sinon": "^7.0.11",
    "@types/ws": "^6.0.1",
    "bluebird": "^3.5.4",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "husky": "^2.3.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "ts-essentials": "^2.0.7",
    "ts-loader": "^6.0.1",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "webpack": "^4.32.0",
    "webpack-cli": "^3.3.2"
  },
  "author": "deepstreamHub GmbH",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/deepstreamIO/deepstream.io-client-js/issues"
  },
  "homepage": "http://deepstream.io",
  "eslintConfig": {
    "extends": "deepstream"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm t && npm run build"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
